{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Assumptions Schema",
  "description": "Defines the structure for documenting riskiest assumptions.",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique identifier for the assumption"
      },
      "description": {
        "type": "string",
        "description": "A falsifiable hypothesis"
      },
      "work_packages": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "List of work package IDs designed to test this assumption"
      }
    },
    "required": ["id", "description", "work_packages"]
  }
}
