{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OKRs Schema",
  "description": "Defines the structure for setting Objectives and Key Results.",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique identifier for the OKR"
      },
      "objective": {
        "type": "string",
        "description": "A qualitative, aspirational goal"
      },
      "key_results": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "Unique identifier for the Key Result"
            },
            "description": {
              "type": "string",
              "description": "Description of the measurable outcome"
            },
            "target": {
              "type": "string",
              "description": "The target metric or outcome"
            },
            "work_packages": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of work package IDs that service this KR"
            }
          },
          "required": ["id", "description", "target"]
        }
      }
    },
    "required": ["id", "objective", "key_results"]
  }
}
